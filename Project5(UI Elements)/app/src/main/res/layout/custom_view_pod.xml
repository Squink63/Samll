<?xml version="1.0" encoding="utf-8"?>
<com.padcmyanmar.abbc.project5.viewpods.ViewPodCustom
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/purple_200">

    <ImageView
        android:id="@+id/ivOne"
        android:layout_width="@dimen/dimen_large_100"
        android:layout_height="@dimen/dimen_large_100"
        android:src="@drawable/imag1"
        android:scaleType="centerCrop"
        android:layout_margin="@dimen/margin_medium"/>

    <TextView
        android:id="@+id/tvHello"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lbl_hello_world"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="@dimen/text_regular_2x"
        android:layout_toEndOf="@+id/ivOne"
        android:layout_marginStart="@dimen/margin_medium_2"
        android:layout_alignTop="@+id/ivOne"/>

    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_medium"
        android:layout_marginStart="@dimen/margin_medium_2"
        android:layout_marginEnd="@dimen/margin_medium_3"
        android:layout_below="@+id/tvHello"
        android:layout_toEndOf="@+id/ivOne"
        android:text="@string/lbl_description"
        android:textSize="@dimen/text_regular_2x" />

</com.padcmyanmar.abbc.project5.viewpods.ViewPodCustom>